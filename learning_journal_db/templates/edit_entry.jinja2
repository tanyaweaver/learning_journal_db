<!DOCTYPE html>

{% extends "layout.jinja2" %}
  {% block body %}

        <form class="single_entry">

           <div class="entry-title">
              <h3>Title:</h3>
             <input class="new-entry-title" placeholder= "{{ entry.title }}">
            </div>

            <div class='entry-body'>
              <h3>Notes:</h3>
              <input class='new-entry-body'  placeholder="{{ entry.body | safe}}">
            </div>

            <div type=submit class="button">
                <h3><a href='/'>Submit</a></h3>
            </div>

        </form>

      {% endblock %}

